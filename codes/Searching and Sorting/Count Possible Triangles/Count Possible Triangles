int getCount(int A[], int n)
{
	int count=0;
	sort(A,A+n);
	for(int i=n-1;i>=2;i--)
	{
		// cout<<A[i]<<"----------\n";
		int l=0, r=i-1;
		while(l<r)
		{
			if(A[l]+A[r]>A[i])
			{
				// cout<<A[l]<<' '<<A[r]<<' ';
				// cout<<r-l<<'\n';
				count+=r-l, r--;

			}
			else
				l++;
		}
	}
	return count;
}

void _main()
{
	int n;
	cin>>n;
	int A[n];
	for(int i=0;i<n;i++)
		cin>>A[i];
	cout<<getCount(A,n);
}


