#include <iostream>
using namespace std;
int main()
{
  	int n;
  	cin>>n;
  	int grid[n][n];
  	for(int i=0;i<n;i++)
  		for(int j=0;j<n;j++)
  			cin>>grid[i][j];
  	int i=0, j=n-1;
  	int count=0;
  	while(i<n && j>=0)
  	{
  	    if(grid[i][j])
  	        j--;
  	    else
  	        {
  	            count+=j+1;        
  	            i++;
  	        }
  	}
  	cout<<count;
  	return 0;
}

