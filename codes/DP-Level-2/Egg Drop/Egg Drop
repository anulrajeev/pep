int eggDrop(int f, int e)
{
	vvi dp(f+1,vi(e+1,0));

	for(int j=1;j<=e;j++)
		dp[0][j]=0, dp[1][j]=1;
	for(int i=1;i<=f;i++)
		dp[i][1]=i;
	for(int i=2;i<=f;i++)
		for(int j=2;j<=e;j++)
		{
			dp[i][j]=INT_MAX;
			for(int x=1;x<=i;x++)
				dp[i][j]=min(dp[i][j], 1+max(dp[x-1][j-1], dp[i-x][j]));
		}
	// for(int i=0;i<=f;i++)
	// {	for(int j=0;j<=e;j++)
	// 		cout<<dp[i][j]<<'\t';
	// 	cout<<'\n';
	// }
	return dp[f][e];
}

void _main()
{
  	int n,k;
  	cin>>n>>k;
  	cout<<eggDrop(k,n);
}

