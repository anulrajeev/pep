#include <bits/stdc++.h>
using namespace std;

int optimal(int A[], int n)
{
	int dp[n][n];
	for(int gap=0;gap<n;gap++)
		for(int i=0;i+gap<n;i++)
		{
			int j=i+gap;
			if(gap==0)
				dp[i][j]=A[i];
			else if(gap==1)
				dp[i][j]=max(A[i],A[j]);
			else
				dp[i][j]=max(A[i]+min(dp[i+2][j],dp[i+1][j-1]),A[j]+min(dp[i+1][j-1],dp[i][j-2]));
		}
	return dp[0][n-1];
}

int main()
{
  	int n;
  	cin>>n;
  	int A[n];
  	for(int i=0;i<n;i++)
  		cin>>A[i];
  	cout<<optimal(A,n);
  	return 0;
}

